{
  "name": "collabboard",
  "version": "1.0.0",
  "private": true,
  "description": "Collaborative whiteboard platform - monorepo",
  "scripts": {
    "dev:web": "cd apps/web && npm run dev",
    "dev:server": "cd apps/server && npm run dev",
    "build:web": "cd apps/web && npm run build",
    "start:server": "cd apps/server && npm run start",
    "lint": "cd apps/web && npm run lint",
    "test": "cd apps/web && npm run test -- --run",
    "test:server": "cd apps/server && npm run test",
    "check:server": "node --check apps/server/server.js"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "ws": "^8.19.0"
  }
}
